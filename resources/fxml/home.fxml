<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="grid" hgap="40.0" minHeight="-Infinity" minWidth="-Infinity" vgap="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rs.Classes.LoginController">
  <stylesheets>
      <URL value="@/css/home.css" />
  </stylesheets>
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" />
    <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="ALWAYS" />
  </rowConstraints>
   <children>
      <VBox alignment="CENTER" GridPane.rowIndex="2">
         <children>
            <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/doctor.png" />
               </image></ImageView>
            <Button fx:id="btnDoctor" defaultButton="true" mnemonicParsing="false" onAction="#loginDoctor" prefHeight="50.0" prefWidth="210.0" text="Doctor" textFill="WHITE" VBox.vgrow="NEVER">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font></Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <ImageView fitHeight="300.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
               <image>
                  <Image url="@../img/medical.png" />
               </image></ImageView>
            <Button fx:id="btnMedical" defaultButton="true" mnemonicParsing="false" onAction="#loginMedical" prefHeight="50.0" prefWidth="215.0" text="Medical technician" textFill="WHITE" VBox.vgrow="NEVER">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font></Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="2">
         <children>
            <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
               <image>
                  <Image url="@../img/manager.jpg" />
               </image></ImageView>
            <Button fx:id="btnManager" defaultButton="true" mnemonicParsing="false" onAction="#loginManger" prefHeight="50.0" prefWidth="210.0" text="Manager" textFill="WHITE" VBox.vgrow="NEVER">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font></Button>
         </children>
      </VBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
        <buttons>
          <Button fx:id="cancel" cancelButton="true" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#closeWindow" prefHeight="44.0" prefWidth="111.0" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font></Button>
        </buttons>
      </ButtonBar>
      <ImageView fitHeight="200.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="3" GridPane.vgrow="NEVER">
         <image>
            <Image url="@../img/title.jpg" />
         </image>
      </ImageView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
